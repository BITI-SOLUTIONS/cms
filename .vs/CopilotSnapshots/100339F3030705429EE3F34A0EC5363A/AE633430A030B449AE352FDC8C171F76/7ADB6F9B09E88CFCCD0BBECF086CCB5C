    <div class="login-card">
        <div class="login-header">
            <!-- Logo SVG del sistema -->
            <img src="/img/logo-tech.svg" 
                 alt="BITI Solutions" 
                 class="logo-login"
                 onerror="this.onerror=null; this.src='/img/logo.png';" />
            <h1>Iniciar Sesión</h1>
            <div class="company-badge">
                <i class="bi bi-building me-1"></i>@Model.CompanyName
            </div>
        </div>

        <div class="login-body">
            @if (Model.IsLocked && Model.LockoutEnd.HasValue)
            {
                <div class="lockout-info">
                    <i class="bi bi-lock-fill" style="font-size: 2.5rem; color: #f87171;"></i>
                    <p class="mb-1 mt-2"><strong>Cuenta bloqueada temporalmente</strong></p>
                    <p class="mb-2 small" style="color: var(--text-gray);">Demasiados intentos fallidos</p>
                    <div class="countdown" id="countdown"></div>
                    <p class="mb-0 small mt-3">
                        <a asp-action="ForgotPassword">Restablecer contraseña para desbloquear</a>
                    </p>
                </div>
                <script>
                    var lockoutEnd = new Date('@Model.LockoutEnd.Value.ToString("o")');
                    function updateCountdown() {
                        var now = new Date();
                        var diff = lockoutEnd - now;
                        if (diff <= 0) {
                            document.getElementById('countdown').innerHTML = '¡Desbloqueado!';
                            setTimeout(() => location.reload(), 1000);
                            return;
                        }
                        var minutes = Math.floor(diff / 60000);
                        var seconds = Math.floor((diff % 60000) / 1000);
                        document.getElementById('countdown').innerHTML = 
                            minutes.toString().padStart(2, '0') + ':' + seconds.toString().padStart(2, '0');
                        setTimeout(updateCountdown, 1000);
                    }
                    updateCountdown();
                </script>
            }
            else
            {
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert @(Model.RemainingAttempts <= 1 ? "alert-warning" : "alert-danger") d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>@Model.ErrorMessage</div>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" asp-for="CompanySchema" />

                    <div class="form-floating">
                        <input type="email" 
                               class="form-control" 
                               id="email" 
                               asp-for="Email" 
                               placeholder="correo@ejemplo.com"
                               autocomplete="email"
                               autofocus />
                        <label for="email">
                            <i class="bi bi-envelope me-2"></i>Correo electrónico
                        </label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating password-wrapper">
                        <input type="password" 
                               class="form-control" 
                               id="password" 
                               asp-for="Password" 
                               placeholder="Contraseña"
                               autocomplete="current-password" />
                        <label for="password">
                            <i class="bi bi-lock me-2"></i>Contraseña
                        </label>
                        <span class="password-toggle" onclick="togglePassword()">
                            <i class="bi bi-eye" id="toggleIcon"></i>
                        </span>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            Recordarme
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                    </button>
                </form>

                <div class="forgot-password">
                    <a asp-action="ForgotPassword">
                        <i class="bi bi-question-circle me-1"></i>¿Olvidaste tu contraseña?
                    </a>
                </div>
            }

            <div class="change-company">
                <a asp-action="SelectCompany">
                    <i class="bi bi-arrow-left me-1"></i>Cambiar compañía
                </a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            var passwordInput = document.getElementById('password');
            var toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
