                    {
                        <a asp-action="ManagePermissions" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-gear me-1"></i>Gestionar Permisos
                        </a>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.Permissions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Permiso</th>
                                        <th>Clave</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var perm in Model.Permissions.OrderBy(p => p.PermissionKey))
                                    {
                                        <tr>
                                            <td>@perm.PermissionName</td>
                                            <td><code class="text-info">@perm.PermissionKey</code></td>
                                            <td class="text-center">
                                                @if (perm.IsAllowed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Permitido
