@section Scripts {
<script>
    // Obtener token de sesión
    const apiBaseUrl = '@ViewData["ApiBaseUrl"]' || 'https://localhost:7001';

    document.getElementById('companyId').addEventListener('change', async function() {
        const companyId = this.value;
        const userSelect = document.getElementById('userId');
        const btnAssign = document.getElementById('btnAssign');

        userSelect.innerHTML = '<option value="">Cargando usuarios...</option>';
        userSelect.disabled = true;
        btnAssign.disabled = true;

        if (!companyId) {
            userSelect.innerHTML = '<option value="">-- Primero selecciona una compañía --</option>';
            return;
        }

        try {
            const response = await fetch(`/api/Roles/GetUsersForCompany?companyId=${companyId}&roleId=@Model.Id`);
            const users = await response.json();

            userSelect.innerHTML = '<option value="">-- Seleccionar usuario --</option>';
            users.forEach(user => {
                userSelect.innerHTML += `<option value="${user.id}">${user.displayName || user.username} (${user.email})</option>`;
            });

            userSelect.disabled = false;
        } catch (error) {
            console.error('Error cargando usuarios:', error);
            userSelect.innerHTML = '<option value="">Error al cargar usuarios</option>';
        }
    });

    document.getElementById('userId').addEventListener('change', function() {
        document.getElementById('btnAssign').disabled = !this.value;
    });

    // Cargar compañías al abrir el modal
    document.getElementById('assignUserModal').addEventListener('show.bs.modal', async function() {
        const companySelect = document.getElementById('companyId');

        if (companySelect.options.length <= 1) {
            try {
                const response = await fetch('/api/Roles/GetCompanies');
                const companies = await response.json();

                companySelect.innerHTML = '<option value="">-- Seleccionar compañía --</option>';
                companies.forEach(company => {
                    companySelect.innerHTML += `<option value="${company.id}">${company.name} (${company.code})</option>`;
                });
            } catch (error) {
                console.error('Error cargando compañías:', error);
            }
        }
    });
</script>
}
