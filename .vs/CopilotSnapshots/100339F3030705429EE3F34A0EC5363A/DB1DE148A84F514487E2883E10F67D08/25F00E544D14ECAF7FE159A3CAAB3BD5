    ViewData["Title"] = "Sesión cerrada";
    Layout = null; // Sin layout para página standalone
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sesión Cerrada - CMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .signout-card {
            background: white;
            border-radius: 20px;
            padding: 50px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            text-align: center;
            max-width: 450px;
        }
        .success-icon {
            font-size: 5rem;
            color: #10b981;
            animation: scaleIn 0.5s ease-out;
        }
        @@keyframes scaleIn {
            from { transform: scale(0); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }
        .countdown {
            font-size: 0.9rem;
            color: #6b7280;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body>
    <div class="signout-card">
        <i class="bi bi-check-circle-fill success-icon"></i>
        <h2 class="mt-4 mb-3">¡Sesión cerrada!</h2>
        <p class="text-muted mb-4">
            Has cerrado sesión correctamente del sistema CMS.
            <br>
            Todas las cookies han sido eliminadas.
        </p>

        <div class="countdown mb-4">
            <i class="bi bi-clock me-1"></i>
            Serás redirigido en <span id="countdown">5</span> segundos...
        </div>

        <a href="/Account/SelectCompany" class="btn btn-primary">
            <i class="bi bi-box-arrow-in-right me-2"></i>Volver a iniciar sesión
        </a>
    </div>

    <script>
        // Limpiar storage local también
        localStorage.clear();
        sessionStorage.clear();

        // Countdown y redirección automática
        let seconds = 5;
        const countdownEl = document.getElementById('countdown');

        const interval = setInterval(() => {
            seconds--;
            countdownEl.textContent = seconds;

            if (seconds <= 0) {
                clearInterval(interval);
                window.location.href = '/Account/SelectCompany';
            }
        }, 1000);
    </script>
</body>
</html>