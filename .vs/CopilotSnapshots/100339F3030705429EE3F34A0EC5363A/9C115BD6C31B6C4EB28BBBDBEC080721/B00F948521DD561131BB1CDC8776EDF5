    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-mini-card">
                <div class="stat-mini-icon bg-gradient-cyan">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-mini-content">
                    <span class="stat-mini-value">@Model.TotalCount</span>
                    <span class="stat-mini-label">Total Usuarios</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-mini-card">
                <div class="stat-mini-icon bg-gradient-green">
                    <i class="bi bi-person-check"></i>
                </div>
                <div class="stat-mini-content">
                    <span class="stat-mini-value">@Model.Users.Count(u => u.IsActive)</span>
                    <span class="stat-mini-label">Activos</span>
