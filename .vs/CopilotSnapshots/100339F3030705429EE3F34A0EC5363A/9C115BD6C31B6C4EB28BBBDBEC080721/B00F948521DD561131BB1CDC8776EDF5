        <div class="col-md-3">
            <div class="stat-mini-card">
                <div class="stat-mini-icon bg-gradient-purple">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="stat-mini-content">
                    <span class="stat-mini-value">@Model.Users.Count(u => u.LastLogin > DateTime.UtcNow.AddDays(-7))</span>
                    <span class="stat-mini-label">Activos esta semana</span>
                </div>
            </div>
        </div>
    </div>

    <!-- ===== TABLA DE USUARIOS ===== -->
    <div class="card-tech">
        <div class="card-header-tech">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul me-2"></i>Lista de Usuarios
                </h5>
                <span class="badge-tech-info">@Model.TotalCount registros</span>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.Users.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-person-x"></i>
                    </div>
                    <h5>No se encontraron usuarios</h5>
                    <p>No hay usuarios que coincidan con los criterios de búsqueda</p>
                    <a asp-action="Create" class="btn btn-tech-primary mt-3">
                        <i class="bi bi-person-plus me-2"></i>Crear primer usuario
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table-tech">
                        <thead>
                            <tr>
                                <th style="width: 300px;">Usuario</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Último acceso</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center" style="width: 120px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div class="user-cell">
                                            <div class="user-avatar @(user.IsActive ? "avatar-active" : "avatar-inactive")">
                                                @user.Initials
                                            </div>
                                            <div class="user-info">
                                                <span class="user-name">@user.FullName</span>
                                                <span class="user-username">@@@user.Username</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-muted-tech">@user.Email</span>
                                        @if (user.IsEmailVerified)
                                        {
                                            <i class="bi bi-patch-check-fill text-success ms-1" title="Email verificado"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Roles.Any())
                                        {
                                            @foreach (var role in user.Roles.Take(3))
                                            {
                                                <span class="badge-tech-role me-1">@role</span>
                                            }
                                            @if (user.Roles.Count > 3)
                                            {
                                                <span class="badge-tech-more">+@(user.Roles.Count - 3)</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted-tech">Sin roles</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LastLogin.HasValue)
                                        {
                                            <span class="text-muted-tech">
                                                <i class="bi bi-clock me-1"></i>
                                                @user.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted-tech">Nunca</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (user.IsActive)
                                        {
                                            <span class="status-badge status-active">
                                                <i class="bi bi-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-inactive">
                                                <i class="bi bi-x-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-action="Details" asp-route-id="@user.Id" 
                                               class="btn-action btn-action-view" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@user.Id" 
                                               class="btn-action btn-action-edit" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn-action btn-action-delete" 
                                                    title="@(user.IsActive ? "Desactivar" : "Activar")"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#toggleStatusModal"
                                                    data-user-id="@user.Id"
                                                    data-user-name="@user.FullName"
                                                    data-user-active="@user.IsActive.ToString().ToLower()">
                                                <i class="bi bi-@(user.IsActive ? "person-dash" : "person-check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer-tech">
                        <nav aria-label="Paginación">
                            <ul class="pagination-tech">
                                <li class="@(!Model.HasPreviousPage ? "disabled" : "")">
                                    <a asp-action="Index" 
                                       asp-route-page="@(Model.CurrentPage - 1)" 
                                       asp-route-search="@Model.SearchTerm"
                                       asp-route-status="@Model.StatusFilter">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="@(i == Model.CurrentPage ? "active" : "")">
                                        <a asp-action="Index" 
                                           asp-route-page="@i" 
                                           asp-route-search="@Model.SearchTerm"
                                           asp-route-status="@Model.StatusFilter">@i</a>
                                    </li>
                                }
                                <li class="@(!Model.HasNextPage ? "disabled" : "")">
                                    <a asp-action="Index" 
                                       asp-route-page="@(Model.CurrentPage + 1)" 
                                       asp-route-search="@Model.SearchTerm"
                                       asp-route-status="@Model.StatusFilter">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- ===== MODAL TOGGLE STATUS ===== -->
<div class="modal fade" id="toggleStatusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: #1e293b; border: 1px solid rgba(6,182,212,0.3); border-radius: 16px;">
            <div class="modal-header" style="border-bottom: 1px solid rgba(6,182,212,0.2);">
                <h5 class="modal-title" id="toggleStatusTitle" style="color: #f8fafc;">
                    <i class="bi bi-person-gear me-2"></i>Cambiar estado
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div id="toggleStatusIcon" style="width: 70px; height: 70px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                    <i class="bi" style="font-size: 2rem;"></i>
                </div>
                <h5 id="toggleStatusQuestion" style="color: #f8fafc;"></h5>
                <p id="toggleStatusUserName" style="color: #94a3b8;"></p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid rgba(6,182,212,0.2); justify-content: center; gap: 10px;">
                <button type="button" class="btn" data-bs-dismiss="modal" 
                        style="background: transparent; border: 1px solid #64748b; color: #94a3b8; border-radius: 8px; padding: 8px 20px;">
                    Cancelar
                </button>
                <form id="toggleStatusForm" method="post" style="display: inline; margin: 0;">
                    @Html.AntiForgeryToken()
                    <button type="submit" id="toggleStatusBtn" class="btn" 
                            style="border: none; border-radius: 8px; padding: 8px 20px; font-weight: 600;">
                        Confirmar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var toggleModal = document.getElementById('toggleStatusModal');
            if (toggleModal) {
                toggleModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var userId = button.getAttribute('data-user-id');
                    var userName = button.getAttribute('data-user-name');
                    var isActive = button.getAttribute('data-user-active') === 'true';
                    
                    var form = document.getElementById('toggleStatusForm');
                    var icon = document.querySelector('#toggleStatusIcon i');
                    var iconDiv = document.getElementById('toggleStatusIcon');
                    var question = document.getElementById('toggleStatusQuestion');
                    var userNameEl = document.getElementById('toggleStatusUserName');
                    var btn = document.getElementById('toggleStatusBtn');
                    
                    if (isActive) {
                        form.action = '/Users/Delete/' + userId;
                        iconDiv.style.background = 'rgba(239, 68, 68, 0.15)';
                        icon.className = 'bi bi-person-dash';
                        icon.style.color = '#ef4444';
                        question.textContent = '¿Desactivar este usuario?';
                        btn.style.background = 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)';
                        btn.style.color = 'white';
                        btn.innerHTML = '<i class="bi bi-person-dash me-1"></i>Desactivar';
                    } else {
                        form.action = '/Users/Activate/' + userId;
                        iconDiv.style.background = 'rgba(16, 185, 129, 0.15)';
                        icon.className = 'bi bi-person-check';
                        icon.style.color = '#10b981';
                        question.textContent = '¿Activar este usuario?';
                        btn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                        btn.style.color = 'white';
                        btn.innerHTML = '<i class="bi bi-person-check me-1"></i>Activar';
                    }
                    
                    userNameEl.textContent = userName;
                });
            }
        });
    </script>
}

