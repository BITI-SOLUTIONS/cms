                <h1>Gestión de Usuarios</h1>
                <p>Administrar usuarios, roles y permisos del sistema</p>
            </div>
        </div>
        <div class="page-header-actions">
            <a asp-action="Create" class="btn btn-tech-primary">
                <i class="bi bi-person-plus-fill me-2"></i>Nuevo Usuario
            </a>
        </div>
    </div>

    <!-- ===== ALERTAS ===== -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success-tech d-flex align-items-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>@TempData["Success"]</div>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger-tech d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>@TempData["Error"]</div>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ===== FILTROS Y BÚSQUEDA ===== -->
    <div class="card-tech mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label-tech">Buscar</label>
                    <div class="input-group-tech">
                        <span class="input-icon"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" value="@Model.SearchTerm" 
                               class="form-control-tech" 
                               placeholder="Buscar por nombre, email o usuario..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label-tech">Estado</label>
                    <select name="status" class="form-select-tech">
                        <option value="">Todos</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">Activos</option>
                        <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Inactivos</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-tech-outline me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
