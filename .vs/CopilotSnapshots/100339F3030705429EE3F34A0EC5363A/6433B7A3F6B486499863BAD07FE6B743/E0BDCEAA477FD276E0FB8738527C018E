@using System.Security.Principal
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using CMS.UI.Extensions

<ul class="navbar-nav align-items-center">
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-avatar-small me-2">
                    <i class="bi bi-person-circle"></i>
                </div>
                @if (!string.IsNullOrEmpty(User.GetDisplayName()))
                {
                    <span class="d-none d-md-inline">@User.GetDisplayName()</span>
                }
                else
                {
                    <span class="d-none d-md-inline">@User.Identity?.Name</span>
                }
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="navbarDropdown">
                <li class="dropdown-header">
                    <small class="text-muted">Sesión activa</small>
                    <div class="fw-bold">@User.GetDisplayName()</div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-controller="Home" asp-action="Profile">
                        <i class="bi bi-person-circle me-2"></i>Mi perfil
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Home" asp-action="Settings">
                        <i class="bi bi-gear me-2"></i>Configuración
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión
                    </a>
                </li>
            </ul>
        </li>

        <!-- Botón de salida rápida (visible en desktop) -->
        <li class="nav-item d-none d-lg-block ms-2">
            <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#logoutModal" title="Cerrar sesión">
                <i class="bi bi-box-arrow-right"></i>
            </button>
        </li>

        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item ms-2">
                <span class="badge bg-success">
                    <i class="bi bi-shield-check me-1"></i>Admin
                </span>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="SelectCompany">
                <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar sesión
            </a>
        </li>
    }
</ul>

<!-- ===== MODAL DE CONFIRMACIÓN DE LOGOUT ===== -->
@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="logoutModalLabel">
                        <i class="bi bi-box-arrow-right text-danger me-2"></i>
                        Cerrar sesión
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <div class="mb-3">
                        <i class="bi bi-question-circle text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h5>¿Estás seguro que deseas salir?</h5>
                    <p class="text-muted mb-0">
                        Tu sesión será cerrada y tendrás que volver a iniciar sesión.
                    </p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i>Cancelar
                    </button>
                    <form asp-controller="Account" asp-action="SignOut" method="post" id="logoutForm">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right me-1"></i>Sí, cerrar sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}