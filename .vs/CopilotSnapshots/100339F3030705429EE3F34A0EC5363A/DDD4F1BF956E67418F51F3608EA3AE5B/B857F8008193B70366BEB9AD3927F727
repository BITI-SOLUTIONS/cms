                            <div class="text-center border border-dark p-3" id="labelPreview" style="min-height: 120px;">
                                <div id="previewName" class="fw-bold fs-4">Nombre del Producto</div>
                                <div id="previewPrice" class="fs-2 fw-bold text-success">₡0.00</div>
                                <div id="previewBarcode" class="font-monospace mt-2">||||||||||||||||</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let originalData = {};

    function selectItem(itemId) {
        // Resaltar el item seleccionado
        document.querySelectorAll('.item-row').forEach(row => {
            row.style.background = 'rgba(0,0,0,0.2)';
            row.style.borderLeft = 'none';
        });
        const selectedRow = document.querySelector(`[data-item-id="${itemId}"]`);
        if (selectedRow) {
            selectedRow.style.background = 'rgba(6, 182, 212, 0.2)';
            selectedRow.style.borderLeft = '4px solid #06b6d4';
        }

        // Cargar datos del artículo
        fetch(`/Inventory/LabelItems/GetItem/${itemId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const item = data.item;
                    
                    // Guardar datos originales
                    originalData = {
                        labelItem: item.labelItem || item.name,
                        labelPrice: item.labelPrice || item.salePrice,
                        labelBarcode: item.labelItemBarcode || item.barcode
                    };

                    // Mostrar formulario
                    document.getElementById('noItemSelected').style.display = 'none';
                    document.getElementById('labelForm').style.display = 'block';
                    document.getElementById('btnPrint').disabled = false;

                    // Llenar datos
                    document.getElementById('selectedItemId').value = item.id;
                    document.getElementById('itemCode').textContent = item.code;
                    document.getElementById('itemName').textContent = item.name;
                    document.getElementById('labelItem').value = originalData.labelItem;
                    document.getElementById('labelPrice').value = originalData.labelPrice;
                    document.getElementById('labelBarcode').value = originalData.labelBarcode || '';

                    // Actualizar vista previa
                    updatePreview();
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al cargar el artículo');
            });
    }

    function updatePreview() {
        const name = document.getElementById('labelItem').value || 'Nombre del Producto';
        const price = parseFloat(document.getElementById('labelPrice').value) || 0;
        const barcode = document.getElementById('labelBarcode').value || '';

        document.getElementById('previewName').textContent = name;
        document.getElementById('previewPrice').textContent = '₡' + price.toFixed(2);
        document.getElementById('previewBarcode').textContent = barcode || '||||||||||||||||';
    }

    // Actualizar vista previa al escribir
    document.getElementById('labelItem')?.addEventListener('input', updatePreview);
    document.getElementById('labelPrice')?.addEventListener('input', updatePreview);
    document.getElementById('labelBarcode')?.addEventListener('input', updatePreview);

    function saveLabel() {
        const itemId = document.getElementById('selectedItemId').value;
        const data = {
            itemId: parseInt(itemId),
            labelItem: document.getElementById('labelItem').value,
            labelPrice: parseFloat(document.getElementById('labelPrice').value) || 0,
            labelItemBarcode: document.getElementById('labelBarcode').value
        };

        fetch('/Inventory/LabelItems/SaveLabel', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                // Actualizar datos originales
                originalData = {
                    labelItem: data.labelItem,
                    labelPrice: data.labelPrice,
                    labelBarcode: data.labelItemBarcode
                };
                alert('✅ ' + result.message);
            } else {
                alert('❌ ' + result.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error al guardar la etiqueta');
        });
    }

    function resetLabel() {
        document.getElementById('labelItem').value = originalData.labelItem || '';
        document.getElementById('labelPrice').value = originalData.labelPrice || 0;
        document.getElementById('labelBarcode').value = originalData.labelBarcode || '';
        updatePreview();
    }

    function printLabel() {
        const previewContent = document.getElementById('labelPreview').innerHTML;
        const printWindow = window.open('', '_blank');
        printWindow.document.write(`
            <html>
            <head>
                <title>Imprimir Etiqueta</title>
                <style>
                    body { 
                        font-family: Arial, sans-serif; 
                        margin: 0; 
                        padding: 20px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        min-height: 100vh;
                    }
                    .label {
                        border: 2px solid black;
                        padding: 20px 40px;
                        text-align: center;
                    }
                    .name { font-size: 24px; font-weight: bold; margin-bottom: 10px; }
                    .price { font-size: 36px; font-weight: bold; color: #16a34a; margin-bottom: 10px; }
                    .barcode { font-family: monospace; font-size: 18px; }
                </style>
            </head>
            <body>
                <div class="label">
                    <div class="name">${document.getElementById('previewName').textContent}</div>
                    <div class="price">${document.getElementById('previewPrice').textContent}</div>
                    <div class="barcode">${document.getElementById('previewBarcode').textContent}</div>
                </div>
                <script>window.print(); window.close();<\/script>
            </body>
            </html>
        `);
        printWindow.document.close();
    }
</script>
}

@Html.AntiForgeryToken()

