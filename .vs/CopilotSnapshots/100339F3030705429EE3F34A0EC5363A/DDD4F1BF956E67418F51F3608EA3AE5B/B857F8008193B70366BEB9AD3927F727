                Etiquetas de Artículos
            </h1>
            <p class="text-light-emphasis mb-0">Seleccione un artículo para imprimir su etiqueta</p>
        </div>
    </div>

    <!-- ===== ALERTAS ===== -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success-tech d-flex align-items-center mb-4">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>@TempData["Success"]</div>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger-tech d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>@TempData["Error"]</div>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- ===== PANEL IZQUIERDO: LISTA DE ARTÍCULOS ===== -->
        <div class="col-md-5">
            <div class="card bg-dark-card border-0 h-100">
                <div class="card-header bg-dark-header">
                    <h5 class="mb-0">
                        <i class="bi bi-search me-2"></i>Buscar Artículos
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Búsqueda -->
                    <form asp-action="LabelItems" method="get" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" 
                                   placeholder="Buscar por código, nombre..."
                                   value="@Model.Search"
                                   style="background-color: #1e293b; color: #f0f0f0; border-color: rgba(255,255,255,0.3);">
                            <button type="submit" class="btn btn-outline-info">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Lista de artículos -->
                    <div class="item-list" style="max-height: 500px; overflow-y: auto;">
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                <div class="item-row p-3 mb-2 rounded cursor-pointer" 
                                     data-item-id="@item.Id"
                                     onclick="selectItem(@item.Id)"
                                     style="background: rgba(0,0,0,0.2); cursor: pointer; transition: all 0.2s;">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <code class="text-info">@item.Code</code>
                                            <div class="fw-semibold text-light">@item.Name</div>
                                            @if (!string.IsNullOrEmpty(item.LabelItem))
                                            {
                                                <small class="text-success">
                                                    <i class="bi bi-tag me-1"></i>@item.LabelItem
                                                </small>
                                            }
                                        </div>
                                        <span class="badge bg-success fs-6">
                                            ₡@item.LabelPrice.ToString("N2")
                                        </span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-inbox display-4 text-secondary"></i>
                                <p class="text-muted mt-2">No hay artículos de etiqueta</p>
                            </div>
                        }
                    </div>

                    <!-- Paginación -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav class="mt-3">
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i&search=@Model.Search">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>

        <!-- ===== PANEL DERECHO: EDICIÓN DE ETIQUETA ===== -->
        <div class="col-md-7">
            <div class="card bg-dark-card border-0 h-100">
                <div class="card-header bg-dark-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-tag me-2"></i>Datos de la Etiqueta
                    </h5>
                    <button type="button" class="btn btn-success" id="btnPrint" disabled onclick="printLabel()">
                        <i class="bi bi-printer me-2"></i>Imprimir Etiqueta
                    </button>
                </div>
                <div class="card-body">
                    <!-- Mensaje cuando no hay artículo seleccionado -->
                    <div id="noItemSelected" class="text-center py-5">
                        <i class="bi bi-hand-index display-1 text-secondary"></i>
                        <h5 class="text-light mt-3">Seleccione un artículo</h5>
                        <p class="text-muted">Haga clic en un artículo de la lista para ver y editar su etiqueta</p>
                    </div>

                    <!-- Formulario de etiqueta (oculto inicialmente) -->
                    <div id="labelForm" style="display: none;">
                        <input type="hidden" id="selectedItemId" />
                        
                        <!-- Info del artículo -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label text-secondary">Código</label>
                                <div class="fs-5 text-info" id="itemCode">-</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-secondary">Nombre Original</label>
                                <div class="fs-5 text-light" id="itemName">-</div>
                            </div>
                        </div>

                        <hr class="border-secondary my-4" />

                        <!-- Campos editables de la etiqueta -->
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label text-light">
