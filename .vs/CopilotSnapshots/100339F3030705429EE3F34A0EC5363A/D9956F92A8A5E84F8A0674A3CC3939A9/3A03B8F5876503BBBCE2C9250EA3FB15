                <i class="bi bi-arrow-left me-2"></i>Volver
            </a>
        </div>
    </div>

    <!-- ===== FORMULARIO ===== -->
    <div class="card bg-dark-card border-0">
        <div class="card-header bg-dark-header">
            <h5 class="mb-0"><i class="bi bi-key me-2"></i>Datos del Permiso</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <!-- Clave del permiso (solo lectura) -->
                    <div class="col-md-6">
                        <label class="form-label">Clave del Permiso</label>
                        <input type="text" class="form-control bg-dark text-muted" 
                               value="@permissionKey" disabled />
                        <div class="form-text">La clave no se puede modificar</div>
                    </div>

                    <!-- Módulo -->
                    <div class="col-md-6">
                        <label class="form-label required">Módulo</label>
                        <input asp-for="Module" class="form-control bg-dark text-light" 
                               list="modulesList" placeholder="Ej: Admin" required />
                        <datalist id="modulesList">
                            @foreach (var mod in modules)
                            {
                                <option value="@mod">@mod</option>
                            }
                        </datalist>
                        <span asp-validation-for="Module" class="text-danger small"></span>
                    </div>

                    <!-- Nombre -->
                    <div class="col-12">
                        <label class="form-label required">Nombre del Permiso</label>
                        <input asp-for="PermissionName" class="form-control bg-dark text-light"
                               placeholder="Ej: Ver Usuarios" required />
                        <span asp-validation-for="PermissionName" class="text-danger small"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="col-12">
                        <label class="form-label">Descripción</label>
                        <textarea asp-for="Description" class="form-control bg-dark text-light" rows="2"
                                  placeholder="Descripción opcional del permiso..."></textarea>
                    </div>

                    <!-- Estado -->
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Permiso Activo</label>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-tech-primary">
                        <i class="bi bi-check-lg me-2"></i>Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
