    var modules = ViewBag.Modules as List<string> ?? new List<string>();
    var permissionKey = ViewBag.PermissionKey as string;
}

<div class="content-container" style="max-width: 800px; margin: 0 auto;">
    <!-- ===== HEADER ===== -->
