# STAGE 1: BASE (runtime)
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

# STAGE 2: BUILD
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copia la solución y los csproj requeridos (incluyendo UI)
COPY ["CMS.Solution.sln", "./"]
COPY ["CMS.UI/CMS.UI.csproj", "CMS.UI/"]
COPY ["CMS.Application/CMS.Application.csproj", "CMS.Application/"]
COPY ["CMS.Data/CMS.Data.csproj", "CMS.Data/"]
COPY ["CMS.Entities/CMS.Entities.csproj", "CMS.Entities/"]
COPY ["CMS.Shared/CMS.Shared.csproj", "CMS.Shared/"]
COPY ["CMS.API/CMS.API.csproj", "CMS.API/"]

# Copia todos los archivos fuente
COPY CMS.UI/ CMS.UI/
COPY CMS.Application/ CMS.Application/
COPY CMS.Data/ CMS.Data/
COPY CMS.Entities/ CMS.Entities/
COPY CMS.Shared/ CMS.Shared/
COPY CMS.API/ CMS.API/

COPY CMS.UI/appsettings.json CMS.UI/appsettings.json

WORKDIR "/src/CMS.UI"
RUN dotnet restore "CMS.UI.csproj"
RUN dotnet build "CMS.UI.csproj" -c Release -o /app/build
RUN dotnet publish "CMS.UI.csproj" -c Release -o /app/publish /p:UseAppHost=false
RUN dotnet --version

# STAGE 3: FINAL (runtime)
FROM base AS final
WORKDIR /app

COPY --from=build /app/publish .

ENV ASPNETCORE_ENVIRONMENT=Production

ENTRYPOINT ["dotnet", "CMS.UI.dll"]