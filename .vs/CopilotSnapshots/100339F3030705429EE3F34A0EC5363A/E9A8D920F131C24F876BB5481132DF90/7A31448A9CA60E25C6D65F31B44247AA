@* ARCHIVO: CMS.UI/Views/Home/ErrorStandalone.cshtml                               *@
@* PROPÓSITO: Página de error sin layout (para usuarios sin sesión válida)         *@
@* DESCRIPCIÓN: Se muestra cuando hay un error y el usuario no tiene sesión válida *@
@* AUTOR: EAMR, BITI SOLUTIONS S.A                                                 *@
@* CREADO: 2026-02-14                                                              *@
@* ================================================================================ *@

@model CMS.UI.Models.ErrorViewModel
@{
    Layout = null; // Sin layout - página standalone
    var statusCode = Model.StatusCode ?? 500;
    var title = statusCode switch
    {
        400 => "Solicitud Inválida",
        401 => "No Autorizado",
        403 => "Acceso Denegado",
        404 => "Página No Encontrada",
        500 => "Error del Servidor",
        _ => "Error"
    };
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - CMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-card {
            background: white;
            border-radius: 20px;
            padding: 50px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            text-align: center;
            max-width: 500px;
        }
        .error-icon {
            font-size: 5rem;
            animation: pulse 2s infinite;
        }
        .error-icon.warning { color: #f59e0b; }
        .error-icon.danger { color: #dc2626; }
        .error-icon.info { color: #3b82f6; }
        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }
        .error-code {
            font-size: 4rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
        .request-id {
            font-size: 0.75rem;
            color: #9ca3af;
            word-break: break-all;
        }
    </style>
</head>
<body>
    <div class="error-card">
        @switch (statusCode)
        {
            case 400:
                <i class="bi bi-x-circle-fill error-icon warning"></i>
                break;
            case 401:
            case 403:
                <i class="bi bi-shield-exclamation error-icon danger"></i>
                break;
            case 404:
                <i class="bi bi-search error-icon info"></i>
                break;
            default:
                <i class="bi bi-exclamation-triangle-fill error-icon danger"></i>
                break;
        }
        
        <h1 class="error-code">@statusCode</h1>
        <h2 class="mb-3">@title</h2>
        
        <p class="text-muted mb-4">
            @Model.ErrorMessage
        </p>

        <div class="d-grid gap-2">
            <a href="/Account/SelectCompany" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Ir al Inicio
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.RequestId))
        {
            <hr class="my-4">
            <p class="request-id mb-0">
                ID de solicitud: @Model.RequestId
            </p>
        }
    </div>
</body>
</html>
