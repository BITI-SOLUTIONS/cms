                    <span class="badge bg-info">
                        <i class="bi bi-info-circle me-1"></i>
                        Gestiona roles y permisos específicos por compañía
                    </span>
                </div>
                <div class="card-body">
                    @if (Model.Companies != null && Model.Companies.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var company in Model.Companies)
                            {
                                <div class="company-auth-row list-group-item bg-transparent border-bottom border-secondary d-flex justify-content-between align-items-center px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="company-icon me-3">
                                            <i class="bi bi-building"></i>
                                        </div>
                                        <div>
                                            <span class="fw-semibold text-white">@company.CompanyName</span>
                                            <div class="small text-muted">
                                                @if (company.IsDefault)
                                                {
                                                    <span class="badge bg-warning text-dark me-1">Por defecto</span>
                                                }
                                                @if (!company.IsActive)
                                                {
                                                    <span class="badge bg-secondary me-1">Inactivo</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <a asp-action="CompanyAuth" 
                                       asp-route-userId="@Model.Id" 
                                       asp-route-companyId="@company.CompanyId"
                                       class="btn btn-auth-company"
                                       title="Gestionar roles y permisos en esta compañía">
                                        <i class="bi bi-shield-lock me-2"></i>Roles y Permisos
                                        <i class="bi bi-chevron-right ms-2"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted-tech">Sin compañías asignadas</p>
                    }
                </div>
            </div>

            <!-- Roles y Permisos -->
            <div class="card-tech mb-4">
                <div class="card-header-tech">
                    <h5><i class="bi bi-shield-check me-2"></i>Roles y Permisos</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-muted-tech mb-3">Roles Asignados</h6>
                    @if (Model.Roles.Any())
                    {
                        <div class="roles-grid mb-4">
                            @foreach (var role in Model.Roles)
                            {
                                <div class="role-tag">
                                    <i class="bi bi-shield me-2"></i>@role.Name
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted-tech mb-4">Sin roles asignados</p>
                    }

                    <h6 class="text-muted-tech mb-3">Permisos Directos</h6>
                    @if (Model.DirectPermissions.Any())
                    {
                        <div class="permissions-list">
                            @foreach (var perm in Model.DirectPermissions)
                            {
                                <div class="permission-item">
                                    <span class="permission-name">@perm.Name</span>
                                    <span class="permission-key">@perm.Key</span>
                                    @if (perm.IsAllowed)
                                    {
                                        <span class="badge-allowed"><i class="bi bi-check"></i></span>
                                    }
                                    else
                                    {
                                        <span class="badge-denied"><i class="bi bi-x"></i></span>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted-tech">Sin permisos directos (hereda de roles)</p>
                    }
                </div>
            </div>
