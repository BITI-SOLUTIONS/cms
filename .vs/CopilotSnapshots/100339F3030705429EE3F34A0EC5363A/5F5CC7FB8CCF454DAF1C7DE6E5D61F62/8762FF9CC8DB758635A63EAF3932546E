                    <div class="mt-2">
                        <form asp-action="DeleteForce" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" 
                                    onclick="return confirm('⚠️ ELIMINACIÓN FORZADA\\n\\nEsto eliminará TODAS las referencias del usuario (roles, permisos, compañías) y luego el usuario.\\n\\n¿Está seguro?')">
                                <i class="bi bi-trash me-1"></i>Forzar Eliminación
