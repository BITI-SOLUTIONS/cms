                        <div class="alert-mini alert-warning-mini mb-3">
                            <i class="bi bi-lock-fill me-2"></i>
                            <div>
                                <strong>Cuenta Bloqueada</strong>
                                <small>Hasta: @Model.LockoutEnd?.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    }

                    <div class="detail-item">
                        <span class="detail-item-label">Intentos fallidos</span>
                        <span class="detail-item-value @(Model.FailedLoginAttempts > 0 ? "text-warning" : "")">
                            @Model.FailedLoginAttempts
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-item-label">Total de logins</span>
                        <span class="detail-item-value">@Model.LoginCount</span>
                    </div>
