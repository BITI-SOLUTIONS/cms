                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="detail-label">Nombre de Usuario</label>
                            <p class="detail-value">@@@Model.Username</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="detail-label">Email</label>
                            <p class="detail-value">
                                @Model.Email
                                @if (Model.IsEmailVerified)
                                {
                                    <span class="badge-verified ms-2">
                                        <i class="bi bi-patch-check-fill"></i> Verificado
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="detail-label">Nombre Completo</label>
                            <p class="detail-value">@Model.FirstName @Model.LastName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="detail-label">Nombre para Mostrar</label>
