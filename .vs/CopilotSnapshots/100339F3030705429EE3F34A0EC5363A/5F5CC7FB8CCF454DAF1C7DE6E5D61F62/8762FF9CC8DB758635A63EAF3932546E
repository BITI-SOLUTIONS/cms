                <p class="mb-0 small">El usuario no ha verificado su correo electrónico. Envíale un correo de verificación para que pueda acceder al sistema.</p>
            </div>
            <form asp-action="SendVerificationEmail" asp-route-id="@Model.Id" method="post" class="ms-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-warning btn-sm" 
                        onclick="return confirm('¿Enviar email de verificación con nueva contraseña temporal?')">
                    <i class="bi bi-envelope-check me-1"></i>Enviar Verificación
                </button>
            </form>
        </div>
    }

    <div class="row">
        <!-- ===== COLUMNA IZQUIERDA ===== -->
        <div class="col-lg-8">
            <!-- Info básica -->
            <div class="card-tech mb-4">
                <div class="card-header-tech">
