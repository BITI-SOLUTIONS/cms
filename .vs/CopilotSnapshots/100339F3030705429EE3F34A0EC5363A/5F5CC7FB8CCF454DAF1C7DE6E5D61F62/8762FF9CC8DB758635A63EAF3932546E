            <!-- Acciones Rápidas -->
            <div class="card-tech mt-4">
                <div class="card-header-tech">
                    <h5><i class="bi bi-lightning me-2"></i>Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    @if (!Model.IsEmailVerified)
                    {
                        <form asp-action="SendVerificationEmail" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-tech-warning w-100 mb-2" 
                                    onclick="return confirm('¿Enviar email de verificación con nueva contraseña temporal?')">
                                <i class="bi bi-envelope-check me-2"></i>Enviar Email de Verificación
                            </button>
                        </form>
                    }
                    <form asp-action="ResetPassword" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-tech-outline w-100 mb-2" 
                                onclick="return confirm('¿Enviar email de restablecimiento de contraseña?')">
                            <i class="bi bi-key me-2"></i>Restablecer Contraseña
                        </button>
                    </form>
                    @{
                        // Obtener el primer rol y la primera compañía del usuario
                        var firstRole = Model.Roles.FirstOrDefault();
                        var firstCompany = Model.Companies
                            .Where(c => c.IsActive)
                            .OrderBy(c => c.CompanyName)
                            .FirstOrDefault();
                    }
                    @if (firstRole != null && firstCompany != null)
                    {
                        <!-- Redirigir a /Roles/ManagePermissions/{roleId}?userId={userId}&companyId={companyId} -->
                        <a href="/Roles/ManagePermissions/@firstRole.Id?userId=@Model.Id&companyId=@firstCompany.CompanyId"
                           class="btn btn-tech-outline w-100 mb-2"
                           title="Gestionar permisos del rol @firstRole.Name en @firstCompany.CompanyName">
                            <i class="bi bi-shield-lock me-2"></i>Gestionar Roles
                        </a>
                    }
                    else if (firstRole != null)
                    {
                        <!-- Usuario tiene rol pero no compañía -->
                        <a href="/Roles/ManagePermissions/@firstRole.Id"
                           class="btn btn-tech-outline w-100 mb-2"
                           title="Gestionar permisos del rol @firstRole.Name">
                            <i class="bi bi-shield-lock me-2"></i>Gestionar Roles
                        </a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-tech-outline w-100 mb-2" disabled
                                title="Este usuario no tiene roles asignados">
                            <i class="bi bi-shield-lock me-2"></i>Gestionar Roles
                        </button>
                    }
                    <hr class="border-secondary my-3" />
                    <form asp-action="DeletePermanent" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100" 
                                onclick="return confirm('⚠️ ¿Está seguro de ELIMINAR PERMANENTEMENTE este usuario?\\n\\nEsta acción NO se puede deshacer.\\n\\nSi el usuario tiene roles, permisos o compañías asignadas, se mostrarán primero.')">
                            <i class="bi bi-trash me-2"></i>Eliminar Permanentemente
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

