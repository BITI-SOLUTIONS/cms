namespace CMS.Application.DTOs
{
    /// <summary>
    /// Request para obtener token del API después del login de Azure AD
    /// </summary>
    public class TokenRequestDto
    {
        /// <summary>Azure Object ID del usuario</summary>
        public string AzureOid { get; set; } = default!;

        /// <summary>Email del usuario</summary>
        public string Email { get; set; } = default!;

        /// <summary>Nombre completo del usuario</summary>
        public string DisplayName { get; set; } = default!;

        /// <summary>ID de la compañía seleccionada (requerido para permisos por compañía)</summary>
        public int CompanyId { get; set; }
    }
}