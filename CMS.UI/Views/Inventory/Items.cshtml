@model CMS.UI.Controllers.ItemListViewModel

@{
    ViewData["Title"] = "Artículos";
}

<div class="content-container">
    <!-- ===== HEADER ===== -->
    <div class="page-header mb-4">
        <div class="page-header-content">
            <h1>
                <i class="bi bi-tags me-2"></i>
                Artículos (Label Items)
            </h1>
            <p class="text-muted mb-0">Gestión de artículos del inventario</p>
        </div>
        <div class="page-header-actions">
            <a asp-action="CreateItem" class="btn btn-tech-primary">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Artículo
            </a>
        </div>
    </div>

    <!-- ===== ALERTAS ===== -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success-tech d-flex align-items-center mb-4">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>@TempData["Success"]</div>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger-tech d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>@TempData["Error"]</div>
            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ===== FILTROS ===== -->
    <div class="card bg-dark-card border-0 mb-4">
        <div class="card-body">
            <form asp-action="Items" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label text-light">
                        <i class="bi bi-search me-1"></i>Buscar
                    </label>
                    <input type="text" name="search" class="form-control" 
                           placeholder="Código, nombre, descripción..."
                           value="@Model.Search"
                           style="background-color: #1e293b; color: #f0f0f0; border-color: rgba(255,255,255,0.3);">
                </div>
                <div class="col-md-4">
                    <label class="form-label text-light">
                        <i class="bi bi-folder me-1"></i>Categoría
                    </label>
                    <select name="category" class="form-select"
                            style="background-color: #1e293b; color: #f0f0f0; border-color: rgba(255,255,255,0.3);">
                        <option value="">-- Todas --</option>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat" selected="@(Model.Category == cat)">@cat</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-info w-100">
                        <i class="bi bi-filter me-1"></i>Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ===== TABLA DE ARTÍCULOS ===== -->
    <div class="card bg-dark-card border-0">
        <div class="card-header bg-dark-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-list me-2"></i>
                Lista de Artículos
                <span class="badge bg-info ms-2">@Model.TotalCount</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 100px;">Código</th>
                                <th>Nombre</th>
                                <th>Categoría</th>
                                <th class="text-end">Precio Costo</th>
                                <th class="text-end">Precio Venta</th>
                                <th class="text-end">Stock</th>
                                <th class="text-center" style="width: 80px;">Estado</th>
                                <th class="text-center" style="width: 120px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <code class="text-info">@item.Code</code>
                                    </td>
                                    <td>
                                        <div class="fw-semibold text-light">@item.Name</div>
                                        @if (!string.IsNullOrEmpty(item.Brand))
                                        {
                                            <small class="text-muted">@item.Brand</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Category))
                                        {
                                            <span class="badge bg-secondary">@item.Category</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <span class="text-warning">@item.CostPrice.ToString("N2")</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-success">@item.SalePrice.ToString("N2")</span>
                                    </td>
                                    <td class="text-end">
                                        @{
                                            var stockClass = item.CurrentStock <= item.MinStock ? "text-danger" : 
                                                            item.CurrentStock <= item.MinStock * 1.5m ? "text-warning" : "text-success";
                                        }
                                        <span class="@stockClass">@item.CurrentStock.ToString("N2")</span>
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="/Inventory/Items/@item.Id" class="btn btn-outline-info" title="Ver detalle">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/Inventory/Items/Edit/@item.Id" class="btn btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="DeleteItem" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" 
                                                        onclick="return confirm('¿Desactivar este artículo?')"
                                                        title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-dark-header border-top border-secondary">
                        <nav>
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?page=@(Model.CurrentPage - 1)&search=@Model.Search&category=@Model.Category">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i&search=@Model.Search&category=@Model.Category">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?page=@(Model.CurrentPage + 1)&search=@Model.Search&category=@Model.Category">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-secondary"></i>
                    <h5 class="text-light mt-3">No hay artículos</h5>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.Category))
                        {
                            <span>No se encontraron artículos con los filtros aplicados.</span>
                        }
                        else
                        {
                            <span>Aún no hay artículos registrados. Crea el primero.</span>
                        }
                    </p>
                    <a asp-action="CreateItem" class="btn btn-tech-primary">
                        <i class="bi bi-plus-lg me-2"></i>Crear Artículo
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-dark-card { background: linear-gradient(135deg, #1a1f36 0%, #252b47 100%); }
    .bg-dark-header { background: rgba(0, 0, 0, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.1); }
    
    .table-dark {
        --bs-table-bg: transparent;
        --bs-table-hover-bg: rgba(6, 182, 212, 0.1);
    }
    
    .table-dark th {
        background: rgba(0, 0, 0, 0.3);
        border-color: rgba(255, 255, 255, 0.1);
        color: #94a3b8;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
    }
    
    .table-dark td {
        border-color: rgba(255, 255, 255, 0.05);
        vertical-align: middle;
    }

    .page-link {
        background-color: #1e293b;
        border-color: rgba(255, 255, 255, 0.1);
        color: #94a3b8;
    }
    
    .page-link:hover {
        background-color: #334155;
        border-color: rgba(6, 182, 212, 0.5);
        color: #06b6d4;
    }
    
    .page-item.active .page-link {
        background-color: #06b6d4;
        border-color: #06b6d4;
    }
    
    .page-item.disabled .page-link {
        background-color: #1e293b;
        border-color: rgba(255, 255, 255, 0.05);
        color: #475569;
    }
</style>
