@model CMS.UI.Controllers.AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard de Administración";
}

<div class="content-container">
    <!-- ===== HEADER ===== -->
    <div class="page-header mb-4">
        <div class="page-header-content">
            <h1><i class="bi bi-speedometer2 me-2"></i>Dashboard de Administración</h1>
            <p class="text-muted mb-0">
                Resumen del sistema • Compañía: <strong class="text-info">@Model.CurrentCompanyName</strong>
            </p>
        </div>
    </div>

    <!-- ===== ALERTAS ===== -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger-tech d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>@TempData["Error"]</div>
        </div>
    }

    <!-- ===== TARJETAS DE ESTADÍSTICAS ===== -->
    <div class="row g-4 mb-4">
        <!-- Usuarios -->
        <div class="col-md-6 col-lg-3">
            <div class="card bg-gradient-primary border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Usuarios</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                        </div>
                        <div class="icon-circle bg-primary-soft">
                            <i class="bi bi-people-fill text-primary"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success me-1">@Model.ActiveUsers activos</span>
                        @if (Model.InactiveUsers > 0)
                        {
                            <span class="badge bg-secondary">@Model.InactiveUsers inactivos</span>
                        }
                    </div>
                </div>
                <a asp-controller="Users" asp-action="Index" class="card-footer bg-transparent border-top-0 text-center text-decoration-none">
                    <small class="text-info">Ver usuarios <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>

        <!-- Usuarios sin verificar -->
        <div class="col-md-6 col-lg-3">
            <div class="card bg-gradient-warning border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Sin Verificar</h6>
                            <h2 class="mb-0">@Model.UnverifiedUsers</h2>
                        </div>
                        <div class="icon-circle bg-warning-soft">
                            <i class="bi bi-envelope-exclamation text-warning"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @if (Model.UnverifiedUsers > 0)
                        {
                            <span class="text-warning small">
                                <i class="bi bi-exclamation-circle me-1"></i>
                                Pendientes de verificación
                            </span>
                        }
                        else
                        {
                            <span class="text-success small">
                                <i class="bi bi-check-circle me-1"></i>
                                Todos verificados
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Permisos -->
        <div class="col-md-6 col-lg-3">
            <div class="card bg-gradient-info border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Permisos</h6>
                            <h2 class="mb-0">@Model.TotalPermissions</h2>
                        </div>
                        <div class="icon-circle bg-info-soft">
                            <i class="bi bi-key-fill text-info"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">
                            En @Model.PermissionsByModule.Count módulos
                        </span>
                    </div>
                </div>
                <a asp-controller="Permissions" asp-action="Index" class="card-footer bg-transparent border-top-0 text-center text-decoration-none">
                    <small class="text-info">Ver permisos <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>

        <!-- Menús -->
        <div class="col-md-6 col-lg-3">
            <div class="card bg-gradient-success border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Menús</h6>
                            <h2 class="mb-0">@Model.TotalMenus</h2>
                        </div>
                        <div class="icon-circle bg-success-soft">
                            <i class="bi bi-list-nested text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success">@Model.ActiveMenus activos</span>
                    </div>
                </div>
                <a asp-controller="Menus" asp-action="Index" class="card-footer bg-transparent border-top-0 text-center text-decoration-none">
                    <small class="text-info">Ver menús <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>

    <!-- ===== CONTENIDO INFERIOR ===== -->
    <div class="row g-4">
        <!-- Permisos por Módulo -->
        <div class="col-lg-6">
            <div class="card bg-dark-card border-0 h-100">
                <div class="card-header bg-dark-header">
                    <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Permisos por Módulo</h5>
                </div>
                <div class="card-body">
                    @if (Model.PermissionsByModule.Any())
                    {
                        @foreach (var module in Model.PermissionsByModule)
                        {
                            var percentage = Model.TotalPermissions > 0 ? (module.Count * 100 / Model.TotalPermissions) : 0;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>@module.Module</span>
                                    <span class="text-muted">@module.Count permisos</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-info" style="width: @percentage%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">No hay permisos registrados</p>
                    }
                </div>
            </div>
        </div>

        <!-- Últimos Usuarios -->
        <div class="col-lg-6">
            <div class="card bg-dark-card border-0 h-100">
                <div class="card-header bg-dark-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Usuarios Recientes</h5>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-info">Ver todos</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentUsers.Any())
                    {
                        <ul class="list-group list-group-flush bg-transparent">
                            @foreach (var user in Model.RecentUsers)
                            {
                                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@user.FullName</strong>
                                        <br>
                                        <small class="text-muted">@user.Username</small>
                                    </div>
                                    <div class="text-end">
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                        @if (!user.IsEmailVerified)
                                        {
                                            <span class="badge bg-warning">Sin verificar</span>
                                        }
                                        <br>
                                        <small class="text-muted">@user.CreateDate.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4 mb-0">No hay usuarios registrados</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- ===== ACCESOS RÁPIDOS ===== -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card bg-dark-card border-0">
                <div class="card-header bg-dark-header">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Accesos Rápidos</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6 col-md-4 col-lg-2">
                            <a asp-controller="Users" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-person-plus d-block mb-1 fs-4"></i>
                                Nuevo Usuario
                            </a>
                        </div>
                        <div class="col-6 col-md-4 col-lg-2">
                            <a asp-controller="Permissions" asp-action="Create" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-key d-block mb-1 fs-4"></i>
                                Nuevo Permiso
                            </a>
                        </div>
                        <div class="col-6 col-md-4 col-lg-2">
                            <a asp-controller="Menus" asp-action="Create" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-list-nested d-block mb-1 fs-4"></i>
                                Nuevo Menú
                            </a>
                        </div>
                        <div class="col-6 col-md-4 col-lg-2">
                            <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-person-badge d-block mb-1 fs-4"></i>
                                Gestionar Roles
                            </a>
                        </div>
                        <div class="col-6 col-md-4 col-lg-2">
                            <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary w-100 py-3">
                                <i class="bi bi-people d-block mb-1 fs-4"></i>
                                Ver Usuarios
                            </a>
                        </div>
                        <div class="col-6 col-md-4 col-lg-2">
                            <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-light w-100 py-3">
                                <i class="bi bi-gear d-block mb-1 fs-4"></i>
                                Configuración
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-dark-card { background: linear-gradient(135deg, #1a1f36 0%, #252b47 100%); }
    .bg-dark-header { background: rgba(0, 0, 0, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.1); }
    
    .bg-gradient-primary { background: linear-gradient(135deg, #1a1f36 0%, #2d3a5a 100%); }
    .bg-gradient-warning { background: linear-gradient(135deg, #1a1f36 0%, #3d3a2a 100%); }
    .bg-gradient-info { background: linear-gradient(135deg, #1a1f36 0%, #1a3a4a 100%); }
    .bg-gradient-success { background: linear-gradient(135deg, #1a1f36 0%, #1a3a2a 100%); }
    
    .icon-circle {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .bg-primary-soft { background: rgba(59, 130, 246, 0.2); }
    .bg-warning-soft { background: rgba(245, 158, 11, 0.2); }
    .bg-info-soft { background: rgba(6, 182, 212, 0.2); }
    .bg-success-soft { background: rgba(34, 197, 94, 0.2); }
    
    .progress {
        background: rgba(255, 255, 255, 0.1);
    }
    
    .list-group-item {
        border-color: rgba(255, 255, 255, 0.1) !important;
    }
</style>
