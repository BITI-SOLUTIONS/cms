@model CMS.UI.Models.Auth.EmailVerificationResultViewModel

@{
    ViewData["Title"] = Model.Success ? "Email Verificado" : "Error de Verificación";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS By BITI Solutions</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --bg-dark: #0f172a;
            --bg-medium: #1e293b;
            --accent-cyan: #06b6d4;
            --accent-green: #10b981;
            --accent-red: #ef4444;
            --text-white: #f8fafc;
            --text-gray: #94a3b8;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-white);
        }
        
        .verification-card {
            background: var(--bg-medium);
            border-radius: 20px;
            padding: 3rem;
            max-width: 500px;
            width: 100%;
            text-align: center;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }
        
        .icon-container {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            font-size: 3rem;
        }
        
        .icon-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.1));
            color: var(--accent-green);
        }
        
        .icon-error {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(239, 68, 68, 0.1));
            color: var(--accent-red);
        }
        
        h1 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        
        .message {
            color: var(--text-gray);
            font-size: 1rem;
            margin-bottom: 2rem;
            line-height: 1.6;
        }
        
        .email-display {
            background: rgba(6, 182, 212, 0.1);
            border: 1px solid rgba(6, 182, 212, 0.3);
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            margin-bottom: 2rem;
            color: var(--accent-cyan);
            font-family: monospace;
        }
        
        .btn-primary-tech {
            background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
            border: none;
            color: white;
            padding: 0.875rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
        }
        
        .btn-primary-tech:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(6, 182, 212, 0.3);
            color: white;
        }
        
        .logo {
            margin-bottom: 2rem;
        }
        
        .logo img {
            height: 50px;
        }
    </style>
</head>
<body>
    <div class="verification-card">
        <div class="logo">
            <img src="~/img/logo-mini.svg" alt="CMS Logo" onerror="this.style.display='none'" />
        </div>
        
        @if (Model.Success)
        {
            <div class="icon-container icon-success">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h1>¡Email Verificado!</h1>
        }
        else
        {
            <div class="icon-container icon-error">
                <i class="bi bi-exclamation-circle-fill"></i>
            </div>
            <h1>Error de Verificación</h1>
        }
        
        <p class="message">@Model.Message</p>
        
        @if (!string.IsNullOrEmpty(Model.Email))
        {
            <div class="email-display">
                <i class="bi bi-envelope me-2"></i>@Model.Email
            </div>
        }
        
        @if (Model.Success)
        {
            <a href="/" class="btn-primary-tech">
                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
            </a>
        }
        else
        {
            <a href="/" class="btn-primary-tech">
                <i class="bi bi-house me-2"></i>Volver al Inicio
            </a>
        }
    </div>
</body>
</html>
