@using CMS.Entities

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS By BITI Solutions S.A</title>

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Google Fonts - Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- CSS Personalizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMS.UI.styles.css" asp-append-version="true" />

    <!-- Favicon - Con version para evitar caché -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true">
    <link rel="shortcut icon" href="~/favicon.ico" asp-append-version="true">
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/logo.png" asp-append-version="true">
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/logo.png" asp-append-version="true">
</head>

<body>

    <div class="layout-wrapper">

        <!-- ===== SIDEBAR ===== -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-container">
                    <!-- Logo SVG Tech (con fallback a PNG) -->
                    <img src="~/img/logo-mini.svg" 
                         alt="BITI Solutions - CMS" 
                         class="logo"
                         title="CMS - BITI Solutions"
                         onerror="this.onerror=null; this.src='/img/logo.png';" />
                    <div class="logo-text">
                        <h1>CMS</h1>
                        <span>By BITI Solutions</span>
                    </div>
                </div>

                <button class="sidebar-close-btn" onclick="toggleSidebar()" title="Colapsar menú">
                    <i class="bi bi-chevron-left"></i>
                </button>
            </div>

            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <!-- ⭐ MENÚ DINÁMICO (ViewComponent) ===== -->
                    @await Component.InvokeAsync("Menu")
                </ul>
            </nav>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="bi bi-person"></i>
                    </div>
                    <div class="user-details">
                        <small>@User.Identity?.Name</small>
                        <span>Usuario</span>
                    </div>
                </div>
            </div>
        </aside>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <div class="main-content">

            <nav class="navbar navbar-expand-lg top-navbar">
                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" onclick="toggleSidebar()">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="breadcrumb-container">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index" title="Inicio">
                                    <i class="bi bi-house-door"></i>
                                </a>
                            </li>

                            @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home")
                            {
                                <li class="breadcrumb-item">
                                    <a asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">
                                        @ViewContext.RouteData.Values["controller"]
                                    </a>
                                </li>
                            }

                            @if (ViewContext.RouteData.Values["action"]?.ToString() != "Index")
                            {
                                <li class="breadcrumb-item active" aria-current="page">
                                    @ViewContext.RouteData.Values["action"]
                                </li>
                            }
                        </ol>
                    </nav>

                    <div class="user-menu">
                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </nav>

            <main class="content-container">
                @RenderBody()
            </main>

            <footer class="main-footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            &copy; @DateTime.Now.Year - CMS By BITI Solutions S.A -
                            <span class="text-primary">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <text>Conectado como: @User.Identity.Name</text>
                                }
                                else
                                {
                                    <text>No autenticado</text>
                                }
                            </span>
                        </div>

                        <div class="col-md-6 text-end">
                            <span class="text-muted">BITI Solutions S.A</span>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Fix para modales con z-index alto -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Asegurar que el modal de logout funcione correctamente
            var logoutModal = document.getElementById('logoutModal');
            if (logoutModal) {
                logoutModal.addEventListener('show.bs.modal', function() {
                    // Mover el modal al final del body para evitar problemas de z-index
                    document.body.appendChild(logoutModal);
                });
            }
        });
    </script>
</body>
</html>